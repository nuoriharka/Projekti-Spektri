{
  "name": "projekti-spektri",
  "version": "1.0.0",
  "description": "A comprehensive system for managing indoor and greenhouse plant growth, providing automation, environmental monitoring, and control features to enhance agricultural productivity and sustainability",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "build": "webpack",
    "dev": "concurrently \"nodemon index.js\" \"webpack --watch\"",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "analyze": "webpack --profile --json > stats.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "coverage": "jest --coverage",
    "postinstall": "npm run build",
    "docker:build": "docker build -t projekti-spektri .",
    "docker:run": "docker run -p 5000:5000 projekti-spektri",
    "e2e": "cypress run",
    "storybook": "start-storybook -p 6006",
    "test:integration": "jest --config jest.integration.config.js",
    "format:check": "prettier --check .",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "storybook:build": "build-storybook",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build",
    "deploy": "npm run build && pm2 restart ecosystem.config.js",
    "start:staging": "cross-env NODE_ENV=staging node dist/index.js",
    "start:production": "cross-env NODE_ENV=production node dist/index.js",
    "pm2:start": "pm2 start dist/index.js -i max --name spektri-backend",
    "release": "standard-version",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "format:css": "stylelint '**/*.{css,scss}' --fix",
    "sync": "rsync -avz . user@remote:/path/to/Projekti-Spektri --exclude 'node_modules' --exclude 'dist'",
    "audit:fix": "npm audit fix",
    "lint:fix": "eslint . --fix",
    "commit:lint": "commitlint --edit $1"
  },
  "keywords": [
    "grow",
    "system",
    "management",
    "automation",
    "agriculture",
    "smart-farming",
    "environmental",
    "sustainability",
    "horticulture",
    "greenhouse",
    "plant-growth",
    "indoor-farming"
  ],
  "author": "Lauri Rainio",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.9.0",
    "@mui/material": "^5.8.0",
    "apollo-server-express": "^3.11.1",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-rate-limit": "^6.0.0",
    "framer-motion": "^6.0.0",
    "graphql": "^16.6.0",
    "helmet": "^6.0.0",
    "i18next": "^21.6.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "next": "^12.1.0",
    "pm2": "^5.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "redis": "^4.0.0",
    "socket.io": "^4.5.1",
    "styled-components": "^5.3.3",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@storybook/react": "^8.3.5",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "babel-loader": "^8.2.5",
    "commitlint": "^17.0.3",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^10.11.0",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^24.0.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.4",
    "webpack": "^5.64.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run lint && npm run test && npm run build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).[tj]s"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
